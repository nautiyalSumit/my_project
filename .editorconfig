# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Use 4 spaces for Python
[*.py]
indent_style = space
indent_size = 4

# JSON and YAML should also use 2 spaces
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
